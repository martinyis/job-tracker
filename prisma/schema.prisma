generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Job {
  id          String   @id @default(uuid())
  linkedinId  String   @unique

  // Job Details
  title       String
  company     String
  location    String   @default("")
  description String   @default("")
  link        String
  applyLink   String   @default("")
  postedDate  String   @default("")

  // AI Matching (optional â€” new flow saves without scoring)
  matchScore  Int      @default(0)
  matchReason String   @default("")
  keyMatches  String   @default("[]") // JSON array of matched skills/experience

  // Application Tracking
  status      String   @default("new") // new/reviewed/applied/rejected
  notes       String?

  // Metadata
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([matchScore])
  @@index([createdAt])
}

model ScraperState {
  id            String   @id @default("singleton")
  lastRunAt     DateTime @default(now())
  lastSuccessAt DateTime?
  errorCount    Int      @default(0)
  isRunning     Boolean  @default(false)
}
